<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox maxWidth="-Infinity" minWidth="-Infinity" prefWidth="400.0" styleClass="login-pane"
      stylesheets="@../styles/login.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fitHeight="48.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </VBox.margin>
            <image>
                <Image url="@../images/logo-2x.png"/>
            </image>
        </ImageView>
        <TextField fx:id="_usernameText" promptText="username" styleClass="login-textbox"
                   stylesheets="@../styles/login.css">
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </VBox.margin>
        </TextField>
        <PasswordField fx:id="_passwordText" layoutX="20.0" layoutY="20.0" prefHeight="51.0" prefWidth="253.0"
                       promptText="password" styleClass="login-textbox" stylesheets="@../styles/login.css">
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0"/>
            </VBox.margin>
        </PasswordField>
        <AnchorPane>
            <VBox.margin>
                <Insets bottom="15.0" left="15.0" right="15.0"/>
            </VBox.margin>
            <children>
                <Button alignment="CENTER" mnemonicParsing="false" onAction="#onPressLogin" styleClass="login-button"
                        stylesheets="@../styles/login.css" text="LOGIN" textAlignment="CENTER"
                        AnchorPane.rightAnchor="0.0"/>
            </children>
        </AnchorPane>
    </children>
</VBox>
